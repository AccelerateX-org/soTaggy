@model SoTaggy.Web.Areas.Admin.Models.UserRegisterModel
@{
    ViewBag.Title = "Benutzer anlegen";
}

<h4>Neuen Benutzer anlegen</h4>

<div class="well">

@using (Html.BeginForm("CreateUser", "UserAdmin", FormMethod.Post, new { @class = "form-horizontal", role="form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Registration Form</legend>

        <div class="form-group">
            @Html.LabelFor(model => model.UserName, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">
                @Html.EditorFor(model => model.UserName)
                @Html.ValidationMessageFor(model => model.UserName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">
                @Html.EditorFor(model => model.Password)
                @Html.ValidationMessageFor(model => model.Password)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ConfirmPassword, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">
                @Html.EditorFor(model => model.ConfirmPassword)
                @Html.ValidationMessageFor(model => model.ConfirmPassword)
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10 checkbox">
                @Html.LabelFor(model => model.IsUserAdmin, new { @class = "col-md-2 control-label" })
                @Html.CheckBoxFor(model => model.IsUserAdmin)
            </div>
            <div class="col-lg-offset-2 col-lg-10 checkbox">
                @Html.LabelFor(model => model.IsArtworkAdmin, new { @class = "col-md-2 control-label" })
                @Html.CheckBoxFor(model => model.IsArtworkAdmin)
            </div>
            <div class="col-lg-offset-2 col-lg-10 checkbox">
                @Html.LabelFor(model => model.IsTaggingAdmin, new { @class = "col-md-2 control-label" })
                @Html.CheckBoxFor(model => model.IsTaggingAdmin)
            </div>
            <div class="col-lg-offset-2 col-lg-10 checkbox">
                @Html.LabelFor(model => model.IsAnalyst, new { @class = "col-md-2 control-label" })
                @Html.CheckBoxFor(model => model.IsAnalyst)
            </div>
       </div>


        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <input type="submit" class="btn btn-success" value="Benutzer anlegen" />
                <a href="@Url.Action("Index")" class="btn">Zurück zur Liste</a>
            </div>
        </div>

    </fieldset>
}
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
