@model SoTaggy.Web.Data.TaggingGroup


<table class="table table-striped">
    <thead>
        <tr>
            <th style="width:66%">Schlagwort</th>
            <th style="width:33%">Option</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.GroupTags)
        {
            <tr>
                <td>@item.Tag</td>
                <td>@Ajax.ActionLink("Löschen", "DeleteTag", "TaggingGroup",
                    new { tagId = item.GroupTagId, groupId = Model.TaggingGroupId },
                    new AjaxOptions()
                    {
                        HttpMethod = "Post",
                        UpdateTargetId = "TagList",
                        InsertionMode = InsertionMode.Replace,
                        OnSuccess = "RemoveTag",
                    },
                    new
                    {
                        @class="btn btn-danger",
                    })</td>
            </tr>
        }
    </tbody>
</table>
