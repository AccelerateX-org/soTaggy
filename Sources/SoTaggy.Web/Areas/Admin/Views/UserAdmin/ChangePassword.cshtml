@model SoTaggy.Web.Areas.Admin.Models.UserRegisterModel
@{
    ViewBag.Title = "Benutzer anlegen";
}

<h4>Kennwort für @Model.UserName ändern</h4>

<div class="well">

@using (Html.BeginForm("ChangePassword", "UserAdmin", FormMethod.Post, new { @class = "form-horizontal", role="form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>Registration Form</legend>
        @Html.HiddenFor(model => model.UserName)

        <div class="form-group">
            @Html.LabelFor(model => model.Password, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">
                @Html.EditorFor(model => model.Password)
                @Html.ValidationMessageFor(model => model.Password)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ConfirmPassword, new { @class = "col-lg-2 control-label" })
            <div class="col-lg-10">
                @Html.EditorFor(model => model.ConfirmPassword)
                @Html.ValidationMessageFor(model => model.ConfirmPassword)
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <input type="submit" class="btn btn-success" value="Kennwort ändern" />
                <a href="@Url.Action("Index")" class="btn">Zurück zur Liste</a>
            </div>
        </div>

    </fieldset>
}
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
