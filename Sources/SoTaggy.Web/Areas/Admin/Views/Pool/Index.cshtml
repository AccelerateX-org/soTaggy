@model IEnumerable<SoTaggy.Web.Data.ArtworkPool>

@{
    ViewBag.Title = "Bildpools";
}

<h4>Bilderpools</h4>

<div class="well">
    @Html.ActionLink("Neuen Bilderpool anlegen", "Create", null, new { @class="btn btn-success" })
    @if (!ViewBag.DemoAvailable)
    {
        @Html.ActionLink("Demo Bilder einfügen", "InsertDemo", null, new { @class = "btn btn-success" })
    }
</div>

<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>Aktionen</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.Name
        </td>
        <td>
            @item.Description
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id=item.ArtworkPoolId })" class="btn btn-success"><i class="fa fa-edit"></i></a>
            <a href="@Url.Action("ImageList", new { id=item.ArtworkPoolId })" class="btn btn-success"><i class="fa fa-picture-o"></i></a>
            <a href="@Url.Action("Delete", new { id=item.ArtworkPoolId })" class="btn btn-danger"><i class="fa fa-trash-o"></i></a>
        </td>
    </tr>
}

</table>
