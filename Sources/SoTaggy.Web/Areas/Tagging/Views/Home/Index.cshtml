@{
    ViewBag.Title = "Index";
}

<div class="panel">
    <h3>Tagging: so funktioniert es</h3>


    <div id="carousel-tagging" class="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner">
        <div class="item active">
          <img src="~/Images/Tagging01.PNG" alt="">
          <div class="carousel-caption">
              <h4>Schlagworte eingeben</h4>
              <p></p>
          </div>
        </div>
        <div class="item text-center">
          <img src="~/Images/Tagging02.PNG" alt="">
          <div class="carousel-caption">
              <h4>Schlagworte löschen</h4>
              <p></p>
          </div>
        </div>
        <div class="item">
          <img src="~/Images/Tagging03.PNG" alt="">
          <div class="carousel-caption">
              <h4>Übersicht der Werke und Schlagworte</h4>
              <p></p>
          </div>
        </div>
      </div>

      <!-- Controls -->
      <a class="left carousel-control" href="#carousel-tagging" data-slide="prev">
        <span class="icon-prev"></span>
      </a>
      <a class="right carousel-control" href="#carousel-tagging" data-slide="next">
        <span class="icon-next"></span>
      </a>
    </div>

</div>


@section Scripts {
    <script>
        $('.carousel').carousel();
    </script>
}



