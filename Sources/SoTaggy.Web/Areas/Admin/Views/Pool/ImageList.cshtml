@model IEnumerable<SoTaggy.Web.Data.Artwork>

@{
    ViewBag.Title = "ImageList";
}

<h4>Bildpool "@ViewBag.ImagePoolName"</h4>

<div class="well">
    @Html.ActionLink("Abbildung hinzufügen", "CreateImage", new { id=ViewBag.ImagePoolID }, new { @class="btn btn-success" })
    <a href="@Url.Action("Index")" class="btn">Zurück zur Liste</a>
</div>
<table class="table table-striped table-bordered">
    <tr>
        <th>Bild</th>
        <th>Beschreibung</th>
        <th>Aktionen</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <div><img src="@Url.Action("ShowThumnailImage", "Image", new { id = item.ArtworkId })" alt="@item.Title" style="height: 150px;width: auto" /></div>
        </td>
        <td>
            <h4>@item.Artist</h4>
            <p>@item.Title, @item.Dating</p>
            <p>@item.Technique, @item.Dimensions</p>
            <p>@item.ArtworkLibrary.Name</p>
            <p>&copy; @item.CopyrightOwner.Name</p>
        </td>
        <td>
            <a href="@Url.Action("EditImage", new { id=item.ArtworkId })" class="btn btn-success"><i class="fa fa-edit"></i></a>
            <a href="@Url.Action("UploadImage", new { id=item.ArtworkId })" class="btn btn-success"><i class="fa fa-upload"></i></a>
            <a href="@Url.Action("DeleteImage", new { id=item.ArtworkId })" class="btn btn-danger"><i class="fa fa-trash-o"></i></a>
        </td>
    </tr>
}

</table>

